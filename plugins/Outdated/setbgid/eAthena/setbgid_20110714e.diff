+		mapreg_setreg( reference_uid( add_str("$@arenamembers"), i ), bg->members[i].sd->bl.id );
+	mapreg_setreg( add_str("$@arenamembersnum"), i );
+	script_pushint( st, i );
+	return 0;
+}
+
+//	bg_kickall <battleground ID>;
