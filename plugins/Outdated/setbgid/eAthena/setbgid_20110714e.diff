+	struct battleground_data *bg = bg_team_search( script_getnum(st,2) );
+	unsigned char i;
+	if ( bg == NULL )
+		return 0;
+	for ( i = 0; bg->members[i].sd != NULL; i++ )
+		bg_team_leave( bg->members[i].sd , 0 );
+	return 0;
+}
